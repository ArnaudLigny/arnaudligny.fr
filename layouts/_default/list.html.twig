{% extends 'index.html.twig' %}

{% block subheader %}
{% endblock subheader %}

{% block content %}
<section id="posts">
{% if page.pagination is defined %}
{% for post in page.pagination.pages %}
    <article class="post">
        <header>
            <h2 class="post-title"><a href="{{ url(post) }}">{{ post.title }}</a></h2>
            <div class="post-meta">
{% if post.date %}
                <span class="post-date">{{ post.date|date("j M Y") }}</span>
{% endif %}
                <span class="post-time">&#128336;&nbsp;{{ readtime(post.content) }}&nbsp;min</span>
                <span class="post-com">&#9998;&nbsp;<a href="{{ url(post) }}#disqus_thread">Commentaires</a></span>
            </div>
        </header>
        {{ post.content|excerpt }}
        <footer class="more">
            <a href="{{ url(post) }}">Lire la suite &raquo;</a>
        </footer>
    </article>
    <hr />
{% endfor %}
    <footer>
{% if page.pagination.prev is defined %}
        <a href="{{ url(page.pagination.prev) }}">&lsaquo; Précédent</a>
{% endif %}
{% if page.pagination.prev is defined and page.pagination.next is defined %}|{% endif %}
{% if page.pagination.next is defined %}
        <a href="{{ url(page.pagination.next) }}">Suivant &rsaquo;</a>
{% endif %}
    </footer>
{% else %}
{% for post in site.pages|filterBySection(page.pathname)|sortByDate %}
    <article class="post">
        <header>
            <h2 class="post-title"><a href="{{ url(post) }}">{{ post.title }}</a></h2>
{% if post.date %}
            <span class="post-date">{{ post.date|date("j M Y") }}</span>
{% endif %}
            <span class="post-time">&#128336; {{ readtime(post.content) }} min</span>
            <span class="post-com">&#9998; <a href="{{ url(post) }}#disqus_thread">Commentaires</a></span>
        </header>
        {{ post.content|excerpt }}
        <footer class="more">
            <a href="{{ url(post) }}">Lire la suite &raquo;</a>
        </footer>
    </article>
    <hr />
{% endfor %}
{% endif %}
</section>
<script id="dsq-count-scr" src="//arnaudligny.disqus.com/count.js" async></script>
{% endblock %}

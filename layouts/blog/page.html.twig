{% extends ['page.html.twig', '_default/page.html.twig'] %}

{% if page.image is defined and page.image_header ?? true %}
{% set image = asset(page.image)|resize(1200) %}
{% endif %}

        {%- block content ~%}
        <article class="article article--page typeset">
          <h1>{{ page.title }}</h1>
          {%- include 'partials/post-meta.html.twig' with {'post': page} only ~%}
          {{ page.content }}
        </article>
        {%- if page.comments ?? true ~%}
        <aside id="comments">
          <script src="https://giscus.app/client.js"
            data-repo="ArnaudLigny/arnaudligny.fr"
            data-repo-id="MDEwOlJlcG9zaXRvcnkxNjQ5NTcxOA=="
            data-category="Announcements"
            data-category-id="DIC_kwDOAPu0Zs4Cb8aF"
            data-mapping="pathname"
            data-strict="0"
            data-reactions-enabled="1"
            data-emit-metadata="0"
            data-input-position="bottom"
            data-theme="light"
            data-lang="fr"
            data-loading="lazy"
            crossorigin="anonymous"
            async>
          </script>
        </aside>
        {%- endif ~%}
        {%- endblock content ~%}
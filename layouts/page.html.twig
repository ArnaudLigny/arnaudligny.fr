{% extends '_default/page.html.twig' %}

{% block head %}
{{ parent() }}
    {#- Style enhancements ~#}
    <style>{% apply minify_css %}
      /* accessibility */
      .nav {
        padding: inherit;
      }
      .list .item {
        padding: inherit;
      }
      /* CV */
      .profile-picture {
        float: right;
        border-radius: 5%;
        overflow: hidden;
        margin: 1rem !important;
      }
      @media screen and (max-width: 40em) {
        .profile-picture {
          display: none!important;
        }
      }
      @media screen {
        .print {
          display: none;
        }
      }
      /* print */
      @media print {
        header, footer {
          display: none;
        }
        abbr[title] {
          text-decoration: none;
        }
        .print {
          display: block;
        }
        .print__footer {
          margin-top: 3rem;
          padding-top: 0.5rem;
          border-top: 1px solid #b6ceed;
        }
      }
      /* figure caption */
      figcaption {
        font-style: italic;
        font-size: smaller;
        padding: 3px;
        text-align: center;
      }
    {% endapply %}</style>
    <!-- dark mode -->
    <link rel="stylesheet" href="{{ asset('sass/garth-dark.scss') }}" media="(prefers-color-scheme: dark)">
    <!-- PWA -->
    <meta name="theme-color" content="{{ site.manifest.theme_color }}" media="(prefers-color-scheme: light)">
    <meta name="theme-color" content="{{ site.manifest.theme_color_dark }}" media="(prefers-color-scheme: dark)">
    <link rel="apple-touch-icon" href="{{ asset('logo-512.png') }}">
    <link rel="manifest" href="{{ url('manifest') }}">
    {%~ include 'partials/regsw.js.twig' %}
    <!-- /PWA -->
{% endblock head %}

{% block footer %}
{{ parent() }}
    {%~ include 'partials/cloudflareinsights.js.twig' ~%}
    {#- highlight.js ~#}
    {%- set highlight_version = '10.7.2' ~%}
    <link rel="stylesheet" href="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/highlight.js/' ~ highlight_version ~ '/styles/github.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/github-dark.css') }}" media="(prefers-color-scheme: dark)">
    <script src="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/highlight.js/' ~ highlight_version ~ '/highlight.min.js') }}"></script>
    <script src="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/highlight.js/' ~ highlight_version ~ '/languages/twig.min.js') }}"></script>
    <script>
      hljs.configure({languages:[]});
      hljs.highlightAll();
    </script>
    {#- anchor.js ~#}
    {%- set anchor_version = '4.3.1' ~%}
    <script src="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/anchor-js/' ~ anchor_version ~ '/anchor.min.js') }}"></script>
    <script>{% apply minify_js %}
      var selector = 'body > main > div > article > h2, body > main > div > article > h3';
      anchors.options = {
        placement: 'left',
        visible: 'over',
        icon: '#'
      };
      anchors.add(selector);
    {% endapply %}</script>
{% endblock footer %}

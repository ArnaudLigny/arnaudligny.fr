{% extends '_default/page.html.twig' %}

{% block head %}
{{ parent() }}
    {#- Style enhancements ~#}
    <style>{% apply minify_css %}
      /* accessibility */
      .nav {
        padding: inherit;
      }
      .list .item {
        padding: inherit;
      }
      /* CV */
      .profile-picture {
        float: right;
        border-radius: 5%;
        overflow: hidden;
        margin: 1rem !important;
      }
      @media screen and (max-width: 40em) {
        .profile-picture {
          display: none!important;
        }
      }
      /* print */
      @media print {
        header, footer {
          display: none;
        }
        abbr[title] {
          text-decoration: none;
        }
      }
    {% endapply %}</style>
    <!-- dark mode -->
    <link rel="stylesheet" href="{{ asset('sass/garth-dark.scss')|minify|url }}" media="(prefers-color-scheme: dark)">
    <!-- PWA -->
    <meta name="theme-color" content="{{ site.manifest.theme_color|default('#FFF') }}">
    <link rel="apple-touch-icon" href="{{ asset('logo-512.jpg')|url }}">
    <link rel="manifest" href="{{ url('manifest') }}">
    {%~ include 'partials/regsw.js.twig' %}
    <!-- /PWA -->
{% endblock head %}

{% block footer %}
{{ parent() }}
    {%~ include 'partials/cloudflareinsights.js.twig' ~%}
    {# highlight.js #}
    {% set highlight_version = '10.7.2' %}
    <link rel="stylesheet" href="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/highlight.js/' ~ highlight_version ~ '/styles/github.min.css',{minify:false})|url }}">
    <script src="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/highlight.js/' ~ highlight_version ~ '/highlight.min.js',{minify:false})|url }}"></script>
    <script src="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/highlight.js/' ~ highlight_version ~ '/languages/twig.min.js',{minify:false})|url }}"></script>
    <script>{% apply minifyJS %}
      hljs.highlightAll();
    {% endapply %}</script>
    {# anchor.js #}
    {% set anchor_version = '4.3.1' %}
    <script src="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/anchor-js/' ~ anchor_version ~ '/anchor.min.js',{minify:false})|url }}"></script>
    <script>{% apply minifyJS %}
      var selector = 'body > main > div > article > h2, body > main > div > article > h3';
      anchors.options = {
          placement: 'left',
          visible: 'over',
          icon: '#'
      };
      anchors.add(selector);
    {% endapply %}</script>
{% endblock footer %}

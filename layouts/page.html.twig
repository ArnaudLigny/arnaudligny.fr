{% extends '_default/page.html.twig' %}

{% block head %}
{{ parent() }}
    <meta charset="UTF-8">
    {#- Style enhancements #}
    <style>{% apply minify_css %}
      /* accessibility */
      .nav {
        padding: inherit;
      }
      .list .item {
        padding: inherit;
      }
      /* CV */
      .profile-picture {
        float: right;
        border-radius: 5%;
        overflow: hidden;
        margin: 1rem !important;
      }
      @media screen and (max-width: 40em) {
        .profile-picture {
          display: none!important;
        }
      }
      /* print */
      @media print {
        header, footer {
          display: none;
        }
        abbr[title] {
          text-decoration: none;
      }
    {% endapply %}</style>
    <!-- dark mode -->
    <link rel="stylesheet" href="{{ asset('sass/garth-dark.scss')|minify|url }}" media="(prefers-color-scheme: dark)">
    <!-- PWA -->
    <meta name="theme-color" content="{{ site.manifest.theme_color|default('#FFF') }}">
    <link rel="apple-touch-icon" href="aligny-512.jpg">
    <link rel="manifest" href="{{ url('manifest') }}">
{% include 'partials/regsw.js.twig' %}
    <!-- /PWA -->
{% endblock head %}

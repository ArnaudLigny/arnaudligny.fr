<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>{% spaceless %}
{% if page.pathname == 'blog' %}
    Blog de {{ site.title }}
{% elseif page.path == 'blog' %}
    {{ page.title }}
{% else %}
    {{ site.title }}
{% endif %}
    {% endspaceless %}</title>
    <meta name="description" content="{{ site.description }}" />
    <meta name="keywords" content="{{ site.keywords|join(', ') }}" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#d23d23">
    <link rel="shortcut icon" type="image/x-icon" href="{{ site.gravatar }}?s=16.gif" />
    <link rel="alternate" type="application/rss+xml" title="{{ site.title }} : blog" href="{{ url('rss.xml') }}" />
    <link rel="manifest" href="{{ url('manifest.json') }}">
    <!-- Facebook meta -->
    <meta property="og:locale" content="fr_FR" />
    <meta property="og:site_name" content="{{ site.title }}" />
{% if page.id == 'index' %}
    <meta property="og:title" content="{{ site.title }}" />
    <meta property="og:image" content="{{ site.gravatar }}?s=300" />
    <meta property="og:description" content="{{ site.description }}" />
    <meta property="og:url" content="{{ site.baseurl }}" />
    <meta property="og:type" content="profile" />
    <meta property="fb:profile_id" content="{{ site.social.facebook_id }}" />
    <meta property="profile:first_name" content="{{ site.author.firstname }}" />
    <meta property="profile:last_name" content="{{ site.author.lastname }}" />
    <meta property="profile:username" content="{{ site.author.username }}" />
{% else %}
{% if page.section == 'blog' %}
    <meta property="og:type" content="article" />
{% else %}
    <meta property="og:type" content="website" />
{% endif %}
    <meta property="og:title" content="{{ page.title }}" />
    <meta property="og:description" content="{{ page.content|striptags|slice(0, 150) }}" />
    <meta property="og:url" content="{{ url(page) }}" />
{% endif %}
    <!-- Twitter meta -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:creator" content="@{{ site.social.twitter }}" />
    <meta name="twitter:site" content="@{{ site.social.twitter }}" />
    <style>{% filter minifyCSS %}
        html {
            background-color: #fcfcfc;
            color: #444;
            font: 100%/3rem 'Raleway', sans-serif;
        }
        body {
            font-size: 1.8em;
            width: 760px;
            margin: 0px auto;
        }
        p {
            text-align: justify;
        }
    {% endfilter %}</style>
    <link rel="stylesheet" href="{{ url(minify('css/style.css')) }}" media="all" />
</head>
<body>
{% block header %}
    <header>
{% block subheader %}
        <div id="subheader">
            <a href="/"><div id="avatar"></div></a>
            <div id="subheader-title">
                <h1>{{ site.title }}</h1>
                <h2>{{ site.baseline }}</h2>
            </div>
        </div>
{% endblock subheader %}
{% block menu %}
        <nav>
            <ul>
{% for entry in site.menus.main|sortByWeight %}
                {% if page.id == 'index' and entry.id == 'index' %}{% else %}<li><a href="{{ url(entry.url) }}">{% if entry.id == 'index' %}<img src="{{ site.gravatar }}?s=22.gif" />&nbsp;{% endif %}{{ entry.name }}</a></li>{% endif %}
{% endfor %}
            </ul>
            <ul class="social">
                <li><a href="https://twitter.com/{{ site.social.twitter }}" rel="me" class="social"><svg class="icon twitter" width="1em" height="1em"><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#si-zocial-twitter"></use></svg></a></li>
                <li><a href="https://github.com/{{ site.social.github }}" rel="me" class="social"><svg class="icon github" width="1em" height="1em"><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#si-zocial-github"></use></svg></a></li>
                <li><a href="https://www.linkedin.com/in/{{ site.social.linkedin }}/?locale=fr_FR" rel="me" class="social"><svg class="icon linkedin" width="1em" height="1em"><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#si-zocial-linkedin"></use></svg></a></li>
            </ul>
        </nav>
{% endblock menu %}
    </header>
{% endblock header %}
    <div id="page">
{% block content %}
        <!-- Content -->
{{ page.content }}
{% include 'includes/json.html.twig' %}
{% include 'includes/callout.html.twig' %}
{% endblock content %}
        <footer>
            <ul>
                <li>&copy; {{ "now"|date("Y") }} <a href="mailto:arnaud[AROBASE]ligny[POINT]fr">Arnaud Ligny</a></li>
                <li><a href="https://creativecommons.org/licenses/by-sa/4.0/deed.fr">CC BY-SA 4.0</a></li>
                <li>Motoris√© par <a href="{{ phpoole.url }}">PHPoole</a></li>
            </ul>
        </footer>
    </div>

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>{% spaceless %}
{% if page.pathname == 'blog' %}
    Blog de {{ site.title }}
{% elseif page.path == 'blog' %}
    {{ page.title }}
{% else %}
    {{ site.title }}
{% endif %}
    {% endspaceless %}</title>
    <meta name="description" content="{{ site.description }}" />
    <meta name="keywords" content="{{ site.keywords|join(', ') }}" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-icon" href="{{ site.gravatar }}?s=16.gif" />
    <link rel="alternate" type="application/rss+xml" title="{{ site.title }} : blog" href="{{ url('rss.xml') }}" />
    <link rel="manifest" href="manifest.json">
    <!-- Facebook meta -->
    <meta property="og:locale" content="fr_FR" />
{% if page.nodeType == 'homepage' %}
    <meta property="og:url" content="{{ site.baseurl }}" />
    <meta property="og:type" content="profile" />
    <meta property="fb:profile_id" content="{{ site.social.facebook_id }}" />
    <meta property="profile:first_name" content="{{ site.author.firstname }}" />
    <meta property="profile:last_name" content="{{ site.author.lastname }}" />
    <meta property="profile:username" content="{{ site.author.username }}" />
{% elseif page.section == 'blog' %}
    <meta property="og:url" content="{{ url(page) }}" />
    <meta property="og:type" content="article" />
{% else %}
    <meta property="og:url" content="{{ url(page) }}" />
    <meta property="og:type" content="website" />
{% endif %}
    <meta property="og:title" content="{{ site.title }}" />
    <meta property="og:image" content="{{ site.gravatar }}?s=300" />
    <meta property="og:description" content="{{ site.description }}" />
    <meta property="og:site_name" content="{{ site.title }}" />
    <!-- Twitter meta -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:creator" content="@{{ site.social.twitter }}" />
    <meta name="twitter:site" content="@{{ site.social.twitter }}" />
{% filter minifyCSS %}
    <style>
        html {
            background-color: #fcfcfc;
            color: #444;
            font: 100%/3rem 'Raleway', sans-serif;
        }
        body {
            font-size: 1.8em;
            width: 760px;
            margin: 0px auto;
        }
        p {
            text-align: justify;
        }
    </style>
{% endfilter %}
    <link rel="stylesheet" href="{{ url(minify('css/style.css')) }}" media="all" />
</head>
<body>
{% block header %}
    <header>
{% block subheader %}
        <div id="subheader">
            <a href="/"><div id="avatar"></div></a>
            <div id="subheader-title">
                <h1>{{ site.title }}</h1>
                <h2>Consultant technique Web</h2>
            </div>
        </div>
{% endblock subheader %}
{% block menu %}
        <nav>
            <ul>
{% for entry in site.menus.main|sortByWeight %}
{% if page.id != entry.id %}
{% if entry.id == 'index' %}
                <li><a href="{{ url(entry.url) }}"><img src="http://gravatar.com/avatar/7aaf0ad68aea0b1ef57e6dddb1fb11ce?s=22.gif" />&nbsp;{{ entry.name }}</a></li>
{% else %}
                <li><a href="{{ url(entry.url) }}">{{ entry.name }}</a></li>
{% endif %}
{% endif %}
{% endfor %}
                <li><a href="http://twitter.com/{{ site.social.twitter }}">Twitter</a></li>
                <li><a href="https://github.com/{{ site.social.github }}">GitHub</a></li>
                <li><a href="http://www.linkedin.com/in/{{ site.social.linkedin }}">LinkedIn</a></li>
                <li><a href="{{ url(site.social.cv) }}">CV</a></li>
            </ul>
        </nav>
{% endblock menu %}
    </header>
{% endblock header %}
    <div id="page">

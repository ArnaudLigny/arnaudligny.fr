<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>{% spaceless %}
{% if page.pathname == 'blog' %}
    Blog de {{ site.title }}
{% elseif page.path == 'blog' %}
    {{ page.title }}
{% else %}
    {{ site.title }}
{% endif %}
    {% endspaceless %}</title>
    <meta name="description" content="{{ site.description }}" />
    <meta property="og:site_name" content="{{ site.title }}" />
    <meta name="keywords" content="{{ site.keywords|join(', ') }}" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="Shortcut Icon" type="image/x-icon" href="{{ site.gravatar }}?s=16.gif" />
    <link rel="alternate" type="application/rss+xml" title="{{ site.title }} : blog" href="{{ url('rss.xml') }}" />
    <meta property="og:title" content="{{ site.title }}" />
    <meta property="og:description" content="{{ site.description }}" />
    <meta property="og:type" content="website" />
{% set firstname = site.title|split(' ', -1) %}
    <meta property="og:profile:first_name" content="{{ firstname[0] }}" />
{% set lastname = site.title|split(' ', 2) %}
    <meta property="og:profile:last_name" content="{{ lastname[1] }}" />
    <meta property="og:url" content="{{ site.baseurl }}" />
    <meta property="og:image" content="{{ site.gravatar }}?s=300" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@{{ site.social.twitter }}" />
    <meta name="twitter:creator" content="@{{ site.social.twitter }}" />
{% filter minifyCSS %}
    <style>
        html, body {
            font: 200 27px/45px 'Raleway', sans-serif;
            background-color: #fcfcfc;
            color: #444;
        }
        #main {
            width: 760px;
            margin: 50px auto;
        }
    </style>
{% endfilter %}
    <link rel="stylesheet" href="{{ url(minify('assets/css/style.css')) }}" media="all" />
</head>
<body>
    <div id="main">
{% block header %}
        <div id="header">
{% block subheader %}
            <a href="/"><div id="avatar"></div></a>
            <h1>{{ site.title }}</h1>
            <h2>Consultant technique Web</h2>
{% endblock subheader %}
{% block menu %}
            <ul>
{% for entry in site.menus.main|sortByWeight %}
{% if page.id != entry.id %}
{% if entry.id == 'index' %}
                <li><a href="{{ url(entry.url) }}"><img src="http://gravatar.com/avatar/7aaf0ad68aea0b1ef57e6dddb1fb11ce?s=20.gif" />&nbsp;{{ entry.name }}</a></li>
{% else %}
                <li><a href="{{ url(entry.url) }}">{{ entry.name }}</a></li>
{% endif %}
{% endif %}
{% endfor %}
                <li><a href="http://twitter.com/{{ site.social.twitter }}">Twitter</a></li>
                <li><a href="https://github.com/{{ site.social.github }}">GitHub</a></li>
                <li><a href="http://www.linkedin.com/in/{{ site.social.linkedin }}">LinkedIn</a></li>
                <li><a href="{{ url(site.social.cv) }}">CV</a></li>
            </ul>
{% endblock menu %}
        </div>
{% endblock header %}
{% block content %}
        <!-- Content -->
{% include 'presentation.html.twig' %}
{% endblock content %}
    </div>
    <div id="footer">Powered by <a href="{{ phpoole.url }}">PHPoole</a></div>
    <!-- Web font -->
{% filter minifyJS %}
    <script>
       WebFontConfig = {
          google: { id: 'Raleway' }
       };
       (function(d) {
          var wf = d.createElement('script'), s = d.scripts[0];
          wf.src = 'https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js';
          s.parentNode.insertBefore(wf, s);
       })(document);
    </script>
{% endfilter %}
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.6/styles/github.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.6/highlight.min.js"></script>
    <script>hljs.initHighlightingOnLoad();</script>
    <!-- Google Analytics -->
{% filter minifyJS %}
    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-{{ site.ga }}', 'auto');
        ga('send', 'pageview');
    </script>
{% endfilter %}
</body>
</html>

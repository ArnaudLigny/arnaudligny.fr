{% extends ['page.html.twig', '_default/page.html.twig'] %}

    {%- block head -%}
    {{- parent() ~}}
    <meta property="profile:first_name" content="{{ site.profile.firstname }}">
    <meta property="profile:last_name" content="{{ site.profile.lastname }}">
    <meta property="profile:username" content="{{ site.profile.username }}">
    <style>{% apply minify_css %}
      @media print {
        /* Break page, on print, before "Expérience" */
        #experience {
          page-break-before: always;
        }
      }
    {% endapply %}</style>
    {%- endblock head ~%}

  {%- block content ~%}
	<article class="page typeset">
		<img src="{{ asset(page.image)|resize(300)|dataurl }}" width="150" height="150" class="profile-picture" alt="Photo de profil d’{{ site.profile.firstname ~ ' ' ~ site.profile.lastname }}">
    <h1>{{ page.title }}</h1>
    {{- page.intro|markdown_to_html -}}
    {{- site.pages.all['index'].content|markdown_to_html -}}
    {{- page.content ~}}
	</article>
  {%- endblock content ~%}
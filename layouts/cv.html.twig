{% extends 'page.html.twig' %}

{% block content %}
	<article class="page typeset">
		<img src="{{ asset(page.image)|resize(300)|dataurl }}" width="150" height="150" class="profile-picture" alt="Photo de profil d'{{ site.author.firstname ~ ' ' ~ site.author.lastname }}"/>
    <h1>{{ page.title }}</h1>
    {{ page.intro|markdown_to_html }}
    {{ site.pages.all['index'].content|markdown_to_html }}
    {{- page.content ~}}
    <div class="print print__footer">
      Consulter en ligne : <a href="{{ url(page) }}">{{ url(page, {canonical: true}) }}</a>
    </div>
	</article>
{% endblock content %}